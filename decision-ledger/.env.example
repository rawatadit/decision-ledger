# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local          # For local development only
AWS_SECRET_ACCESS_KEY=local      # For local development only

# DynamoDB
DYNAMODB_TABLE_NAME=decision-ledger
DYNAMODB_ENDPOINT=http://localhost:8000  # For local development only

# Slack Bot
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token       # For Socket Mode (optional)

# Meeting Bot Email Ingestion
MEETING_BOT_SENDER=meetingbot@company.com
MEETING_EMAIL_SUBJECT_PATTERN=Meeting summary*
DECISIONS_EMAIL_ADDRESS=decisions@yourdomain.com

# LLM (Amazon Bedrock)
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
